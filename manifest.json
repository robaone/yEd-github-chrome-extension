{
    "manifest_version": 3,
    "name": "yEd-gitHub viewer",
    "version": "1.1",
    "description": "A Chrome extension to open .graphml files from GitHub in yEd Live.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "declarativeContent"
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
